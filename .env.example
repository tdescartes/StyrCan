# ──────────────────────────────────────────────
# Pulse — Environment Variables
# Copy this file to .env and fill in real values
# ──────────────────────────────────────────────

# ─── Application ──────────────────────────────
APP_NAME=Pulse
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# ─── Server ───────────────────────────────────
HOST=0.0.0.0
PORT=8000

# ─── PostgreSQL ───────────────────────────────
# Required — no default
DATABASE_URL=postgresql+asyncpg://pulse_user:pulse_password@localhost:5432/pulse_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# ─── JWT / Auth ───────────────────────────────
# Required — no default. Use a long random string.
SECRET_KEY=change-me-to-a-random-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ─── Redis ────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ─── MongoDB ──────────────────────────────────
MONGODB_URL=mongodb://localhost:27017/pulse_logs
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=pulse_logs

# ─── CORS ─────────────────────────────────────
CORS_ORIGINS=["http://localhost:3000"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# ─── File Uploads ─────────────────────────────
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# ─── Logging ──────────────────────────────────
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ═══════════════════════════════════════════════
# PHASE 1: Revenue & Compliance
# ═══════════════════════════════════════════════

# ─── Stripe Payment Processing ────────────────
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create products in Stripe dashboard)
STRIPE_PRICE_ID_EMPLOYEES=price_employees_monthly_id
STRIPE_PRICE_ID_FINANCE=price_finance_monthly_id
STRIPE_PRICE_ID_PAYROLL=price_payroll_monthly_id
STRIPE_PRICE_ID_COMMUNICATION=price_communication_monthly_id
STRIPE_PRICE_ID_ALL_ACCESS=price_all_access_monthly_id

# ─── SendGrid Email Service ────────────────────
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDER_EMAIL=noreply@yourcompany.com
SENDER_NAME=Pulse

# ═══════════════════════════════════════════════
# PHASE 2: Security & Infrastructure
# ═══════════════════════════════════════════════

# ─── AWS S3 File Storage ───────────────────────
# Create IAM user with S3 permissions
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_BUCKET_NAME=pulse-files
AWS_REGION=us-east-1

# ─── Sentry Error Monitoring ───────────────────
# Get DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ─── Celery Background Jobs ────────────────────
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
