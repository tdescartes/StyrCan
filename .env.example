# ──────────────────────────────────────────────
# Pulse — Environment Variables
# Copy this file to .env and fill in real values
# ──────────────────────────────────────────────

# ─── Application ──────────────────────────────
APP_NAME=Pulse
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# ─── Server ───────────────────────────────────
HOST=0.0.0.0
PORT=8000

# ─── PostgreSQL ───────────────────────────────
# Required — no default
DATABASE_URL=postgresql+asyncpg://pulse_user:pulse_password@localhost:5432/pulse_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# ─── JWT / Auth ───────────────────────────────
# Required — no default. Use a long random string.
SECRET_KEY=change-me-to-a-random-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ─── Redis ────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ─── MongoDB ──────────────────────────────────
MONGODB_URL=mongodb://localhost:27017/pulse_logs
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=pulse_logs

# ─── CORS ─────────────────────────────────────
CORS_ORIGINS=["http://localhost:3000"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# ─── File Uploads ─────────────────────────────
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# ─── Logging ──────────────────────────────────
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
